<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="projekt.WorkDonePage"
             Title="WorkDonePage">
    <VerticalStackLayout>
        <StackLayout Padding="30" Spacing="20">
            <Label Text="Enter Force (N)" />
            <Entry x:Name="Force" Placeholder="Force" Keyboard="Numeric" />

            <Label Text="Enter Distance (m)" />
            <Entry x:Name="Distance" Placeholder="Distance" Keyboard="Numeric" />

            <Button Text="Calculate Work Done" Clicked="OnCalculateClicked" />

            <Label x:Name="WorkDone" FontSize="20" />

            <Button Text="Back" Clicked="OnBackClicked" />
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>